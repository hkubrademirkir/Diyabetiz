@model ContactUsVM
@{
    ViewBag.Title = "ContactUs";
}

<div id="fh5co-contact">
    <div class="row animate-box fadeInUp animated-fast">
        <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
            <h2>Bize Ulaşın</h2>
            <p>
                Tip1 Diyabetlilerin Buluşma Noktası.
                Bizi En İyi Biz Anlarız, Çünkü #diyabetiz #diyabetizheryerdeyiz
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-md-push-8 animate-box fadeInUp animated-fast">
            <h3>İletişim</h3>
            <ul class="contact-info">
                <li><i class="icon-location4"></i>198 West 21th Street, Suite 721 New York NY 10016</li>
                <li><i class="icon-phone3"></i>+ 1235 2355 98</li>
                <li><i class="icon-location3"></i><a href="#">bilgi@diyabetiz.com</a></li>
                <li><i class="icon-instagram"></i><a href="https://www.instagram.com/diyabetiz/">instagram/diyabetiz</a></li>
            </ul>
        </div>
        @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @TempData["NoteError"]
            @TempData["SuccessMail"]
            <div class="col-md-7 col-md-pull-2 animate-box fadeInUp animated-fast">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ad", required = "true", type = "text", maxlength = 20 })

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", type = "email", placeholder = "E-Posta", required = "true", maxlength = 40 })

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", cols = "30", rows = "6", required = "true", placeholder = "Mesajınız", type = "text", maxlength = 200 })

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" value="E-Posta Gönder" class="btn btn-primary btn-modify">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


