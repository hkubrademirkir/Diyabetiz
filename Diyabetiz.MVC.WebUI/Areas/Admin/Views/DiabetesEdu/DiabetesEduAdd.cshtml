@model DiabetesEduVM
@{
    ViewBag.Title = "Diyabet Eğitim İçeriği Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("DiabetesEduAdd", "DiabetesEdu", FormMethod.Post, new { @role = "form", @enctype = "multipart/form-data" }))
        {
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Başlık</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.diabetesEducation.Title, new { @class = "form-control", type = "text", placeholder = "Enter Content Title", required = "true", maxlength = 100 })
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        <label class="col-md-4 control-label">Açıklama</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(x => x.diabetesEducation.Description, new { @class = "form-control", type = "text", placeholder = "Enter Description", required = "true", maxlength = 1000 })
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        <label class="col-md-4 control-label">Fotoğraf</label>
                        <div class="col-md-8">
                            <input type="file" name="file" required>
                        </div>
                    </div>
                    <br />
                    <div class="form-group last mt-2 clearfix">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-8">
                            <button type="submit" class="btn green">Kaydet</button>
                            @Html.ActionLink("İptal", "DiabetesEduList", null, new { @class = "btn default" })
                            @*<button type="button" class="btn default">İptal</button>*@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#summernote').summernote();
    });
</script>
