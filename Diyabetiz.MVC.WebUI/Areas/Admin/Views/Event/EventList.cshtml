@model EventVM
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-red"></i>
                    <span class="caption-subject font-red sbold">Etkinlikler</span>
                </div>
                <div class="actions">
                    @Html.ActionLink("Etkinlik Planlamasına Git", "FullCalender","Event", null, new { @class = "btn btn-transparent green btn-outline btn-circle btn-sm active" })
                    @Html.ActionLink("Ekle", "EventAdd", null, new { @class = "btn btn-transparent red btn-outline btn-circle btn-sm active" })
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-hover table-light">
                        <thead>
                            <tr>
                                <th> Title </th>
                                <th> Description </th>
                                <th> CreatedDate </th>
                                <th> EventDate </th>
                                <th> Address </th>
                      
                                <th>Process </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Events)
                            {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.EventDate </td>
                                <td> @item.Adress </td>

                                

                                <td>
                                    <a href="@Url.Action("Eventupdate","Event", new { id = item.ID })" class="btn btn-outline btn-circle btn-sm purple">
                                        <i class="fa fa-edit"></i> Güncelle
                                    </a>
                                    <a href="@Url.Action("EventDelete", "Event", new { id = item.ID })" class="btn btn-outline btn-circle btn-sm red">
                                        <i class="fa fa-remove"></i> Sil
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
