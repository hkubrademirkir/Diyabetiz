@model HomeVM
@{
    ViewBag.Title = "News";
}




<div class="container-wrap">
    <div id="fh5co-about">
        <div class="row">
            <div class="col-md-9" id="content">
                @Html.Partial("_NewsPartial", Model)
            </div>
            <div class="col-md-3">
                <h3>Diyabetizden Haberler</h3>
                <ul class="ministries-list">
                    @foreach (var item in Model.newsVMList)
                    {
                        <li>
                            <i class="icon-check"></i>
                            <a href="#" id="@item.news.ID" onclick="Myfunc3()" name="@item.news.ID">@item.title</a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

        function Myfunc3(){

            $('a').on('click', function (ev) {
                ev.stopPropagation()
                checkEl = $(this).attr('id');
                console.log(checkEl);

            $.ajax({
                type: "Get" ,
                url: '@Url.Action("NewsPartial", "Home")',
                data: { newsId: checkEl },
                success: function (result) {
                    $("#content").html(result);
                },
                error: function () {

                }
            }).done(function () {

                    });
            });
        };

</script>



